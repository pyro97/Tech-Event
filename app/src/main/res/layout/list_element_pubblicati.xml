<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/eventoElementPu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fotoElementPu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dateElementPu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text=""
                android:textColor="@color/fui_bgFacebook"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/titoloElementPu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif"
                android:text=""
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/luogoElementPu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/browser_actions_title_color"
                android:textSize="14sp" />

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/statoEvento"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:drawable/presence_invisible"
                android:text=""
                android:textColor="@color/browser_actions_title_color"
                android:textSize="14sp" />


        </LinearLayout>


     
    </LinearLayout>






</LinearLayout>
