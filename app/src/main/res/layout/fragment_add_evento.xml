<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:folding-cell="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Aggiungi Evento"
        android:textColor="@color/fui_bgGitHub"
        android:textSize="24sp"
        android:textStyle="bold" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/addEventoTit"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_titolo"
                android:ems="20"
                android:hint="Nome/Argomento dell'evento"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textColorHint="@color/browser_actions_title_color"
                android:textSize="16dp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


            <EditText
                android:focusable="false"
                android:id="@+id/addEventoDescr"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_descr"
                android:ems="10"
                android:hint="Inserisci descrizione e/o info"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textColorHint="@color/browser_actions_title_color"
                android:textSize="16dp" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/addEventoCitta"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_action_city_black"
                android:ems="10"
                android:hint="CittÃ "
                android:completionThreshold="1"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textColorHint="@color/browser_actions_title_color"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/addEventoIndirizzo"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_location"
                android:ems="10"
                android:hint="Luogo/Via"
                android:inputType="textPostalAddress"
                android:padding="10dp"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textColorHint="@color/browser_actions_title_color"
                android:textSize="16dp" />




        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


            <EditText
                android:focusable="false"
                android:id="@+id/addEventoData"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_data"
                android:ems="10"
                android:hint="Scegli data"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textColorHint="@color/browser_actions_title_color"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/addEventoCosto"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_euro"
                android:hint="Costo"
                android:inputType="numberDecimal"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textColorHint="@color/browser_actions_title_color">


            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


            <EditText
                android:focusable="false"
                android:id="@+id/addEventoOrarioI"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_time"
                android:ems="10"
                android:hint="Orario di inizio"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textColorHint="@color/browser_actions_title_color"
                android:textSize="16dp" />

            <EditText
                android:focusable="false"
                android:id="@+id/addEventoOrarioF"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_time"
                android:ems="10"
                android:hint="Orario di fine"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textColorHint="@color/browser_actions_title_color"
                android:textSize="16dp" />



        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addEventoFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:completionThreshold="1"
                android:drawableLeft="@drawable/ic_foto"
                android:ems="10"
                android:hint="Seleziona Foto"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textColorHint="@color/browser_actions_title_color"
                android:textSize="16dp" />


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="Dimensione consigliata: 1100 x 550"
            android:textColor="@color/red_btn_bg_pressed_color"
            android:textSize="10sp" />



        <Button
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:id="@+id/pubblica_evento"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_blue1"
            android:text="Pubblica"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp" />





    </LinearLayout>


</LinearLayout>